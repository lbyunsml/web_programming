<%= stylesheet_link_tag "style.css" %>
<%= stylesheet_link_tag "style-ov.css" %>

  <%= render 'artist/nav' %>
   
    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand" style="color:#FFFFFF">
                        당신을 위한 특별 기획전
                </li>
                <li>
                    <a>준비중입니다.</a>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->  
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">

    <!-- filtering menu-->
    <div class="container">
        <a href="#menu-toggle" class="btn btn-default" id="menu-toggle" style="margin: 0 25px">특별 기획전</a>
        <div class="overview-container">
        <% @c_list.each do |cat| %>
          <% if cat == @par %>
            <a class="btn btn-lg btn-default" style="margin: 0 25px; background-color:#ededed" href="<%= category_path %>/?cat=<%= cat %>"> <%= cat %></a>
          <% else %>
            <a class="btn btn-lg btn-default" style="margin: 0 25px" href="<%= category_path %>/?cat=<%= cat %>"> <%= cat %></a>
          <% end %>
        <% end %>
        </div>
      </div>
    
  <% if @artwork_all != nil %>
    <% @artwork_all.reverse.each_slice(4) do |slice| %>
      <div class="row">
        <% slice.each do |artwork| %>
        <div class="col-md-3">
          <a href="<%= artist_artwork_path(artwork.artist_id,artwork.id)%>">
          <div class="artwork-container">
            <img src="/artwork/<%= artwork.img_path %>" alt="Artwork" class="artwork-image" style="width:100%">
            <div class="artwork-text">
              <div class="text-title"><%= artwork.name %></div>
              <div class="text-desc"><%= artwork.description %></div>
              <div class="text-artist"><%= Artist.find(artwork.artist_id).name %></div>    
            </div>
          </div>
          </a>
        </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
                        </div>
                </div>
            </div>
        </div> 
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- Menu Toggle Script -->


    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>
