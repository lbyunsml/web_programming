<%= stylesheet_link_tag "style.css" %>
<%= stylesheet_link_tag "style-artist.css" %>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
  <meta name="description" content="">
  <meta name="author" content="">
  <link rel="icon" href="bootstrap/favicon.ico">
  
  <style>
    .carousel-inner > .item > img,
    .carousel-inner > .item > a > img {
      width: 70%;
      margin: auto;
    }
  </style>

  <title>SNU_ARTWORKS</title>

    </head>
    <body>
      
      <%= render 'nav' %>

      <!-- 5 rows of 4 columns for each page-->
      <div class="container" style = "margin-top:30px">
        <div class="col-md-3 artist-container">
            <div class="artist-pic">
              <img src="/artist/<%= @artist.profile_img %>" alt="Artwork" class="artwork-image" style="width:%">
            </div>
            <div class = "artist-textarea">
              <p class="artist-title"> <%= @artist.name %>
              </p>
              <p class="artist-desp">
                <%= @artist.description %><br><br> <%= @artist.mail %>
              </p>
              <div class="artist-btn-container">
                <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_blank">
<input type="hidden" name="cmd" value="_s-xclick">
<input type="hidden" name="hosted_button_id" value="C928CNT985XF4">
<input type="image" src="/image/donate_btn.png" border="0" name="submit" alt="PayPal">
                </form>
              </div>
            </div>
        </div>
        <div class="col-md-1">
        </div>
        <div class="col-md-8">


    <% @artwork_all.each_slice(3) do |slice| %>
    <div class="row">
      <% slice.each do |artwork| %>
      <div class="col-md-4 art-container">
        <a href="<%= artist_artwork_path(@artist.id,artwork.id)%>">
          <div class="artwork-container">
            <img src="/artwork/<%= artwork.img_path %>" alt="Artwork" class="artwork-image" style="width:100%">
            <div class="artwork-text">
              <div class="text-title"><%= artwork.name %></div>
              <div class="text-desc"><%= artwork.description %></div>
              <div class="text-artist"><%= @artist.name %></div>   
            </div>
        </div>
        </a>
      </div>
      <% end %>
    </div>
    <% end %>


        </div>

        <hr>


      </div> <!-- /container -->
        <footer>
          <p></p>
          <p>&copy; 2017 Intro. to Web Programming Team I: 박지수, 변승무, 김진모, 김종석</p>
        </footer>

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>


  </body>