<%= stylesheet_link_tag "style.css" %>
      
<%= render 'nav' %>
<h1></h1>
<div class="container body-container">
      <div class="panel panel-default">
        <div class="panel-heading"><strong>Welcome to SNU_ART!!</strong></div>
        <div class="panel-body">
<%= form_for :artist, url: artist_index_path do |f| %>

  <%= render 'errors', object: @artist %>

  <div class="form-group">
    <%= f.label :"login ID" %>
    <%= f.email_field :login_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :"Confirm password" %>
    <%= f.password_field :c_password, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :mail %>
    <%= f.text_field :mail, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :"profile image" %>
    <%= f.file_field :image, class: 'form-control'%>
  </div>

  <%= f.submit 'Upload', class: 'btn btn-primary' %>
<% end %>
        </div>
    </div>
  </div> <!-- /container -->

    <div class="container" style = "margin-top:15px">
