
<% @c_list = ["Photo", "Metal", "East","West","Industrial","Illustration"] %>
      <!-- navigation bar: site logo, search, login -->
      <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="<%= root_path %>">SNU_ARTS</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">

            <!--categories-->
            <ul class="nav navbar-nav navbar-centered">

              <li class="dropdown">
                <a data-toggle="dropdown" class="dropdown-toggle" href="#">Categories <b class="caret"></b></a>
                <ul class="dropdown-menu">
                <% @c_list.each do |cat| %>    
                  <li><a href="<%= category_path %>/?cat=<%= cat %>"><%= cat %></a></li>
                <% end %>
                </ul>
              </li>
            </ul>

            <% if session[:user_id]==nil %>
            <!--sign in-->
            <ul id="signInDropdown" class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <button type="button" id="dropdownMenu1" data-toggle="dropdown" class="btn btn-default navbar-btn dropdown-toggle">Sign in <span class="caret"></span></button>
                <ul class="dropdown-menu">
                  <li>
                    <div class="navbar-form">
                      <%=form_for(:session, url: login_path) do |ff| %>
                        <%= ff.label :email %>
                        <%= ff.email_field :email, class: 'form-control' %>
                        <%= ff.label :password %>
                        <%= ff.password_field :password, class: 'form-control' %>
                        <div style="margin: 10px 0">
                          <%= ff.submit "Log in", class: "btn btn-info" %>
                        </div>
                      <% end %>
                        <span class="pull-right"><a href="#">Join us!</a></span>   
                    </div>
                  </li>
                </ul>
              </li>
            </ul>
            <%else%>
              HELLO
            <%end%>

            <!--search-->
            <form class="navbar-form navbar-right" role="search">
              <div class="input-group add-on">
                <input class="form-control" placeholder="Search" name="srch-term" id="srch-term" type="text">
                <div class="input-group-btn">
                  <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </div>
              </div>
            </form>

          </div><!--/.navbar-collapse -->
        </div>
      </nav>

<%flash.each do |key, value| %>
    <div class="alert alert-<%= key %>" style = "margin-bottom:0"><%= value %></div>
<% end %>